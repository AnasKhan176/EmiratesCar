<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:endColor="@color/toolbar_gradient_start_color"
                android:startColor="@color/toolbar_gradient_end_color" />

        </shape>
    </item>

    <!--android:centerColor="@color/toolbar_gradient_center_color"-->

    <!-- create the stroke for top, left, bottom and right with the dp you want -->
    <item
        android:bottom="@dimen/circle_stroke"
        android:left="@dimen/circle_stroke"
        android:right="@dimen/circle_stroke"
        android:top="@dimen/circle_stroke">
        <shape android:shape="oval">
            <!-- fill the inside in the color you want (could also be a gradient again if you want to, just change solid to gradient and enter angle, start, maybe center, and end color) -->
            <solid android:color="@color/white" />
            <size
                android:width="@dimen/circle_area"
                android:height="@dimen/circle_area" />

        </shape>
    </item>

</layer-list>